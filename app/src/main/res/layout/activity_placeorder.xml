<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.CISUserActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-31dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="-49dp"
        android:layout_marginBottom="-43dp"
        app:srcCompat="@drawable/food_background5" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="90dp"
        android:fontFamily="cursive"
        android:text="Place Order"
        android:textColor="#8A8989"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/orderIdInput"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:backgroundTint="#8C8686"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Order ID"
        android:textColor="#958F8F" />

    <EditText
        android:id="@+id/orderType"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="273dp"
        android:ems="10"
        android:backgroundTint="#8C8686"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="order Type"
        android:textColor="#958F8F"/>

    <EditText
        android:id="@+id/itemIdInput1"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="362dp"
        android:ems="10"
        android:backgroundTint="#8C8686"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Item Id"
        android:textColor="#958F8F"/>



    <Button
        android:id="@+id/backToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="35dp"
        android:onClick="goToMainMenu"
        android:text="â¬… Back to menu" />

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="245dp"
        android:backgroundTint="#4CAF50"
        android:onClick="placeOrder"
        android:text="Place Order" />

</RelativeLayout>