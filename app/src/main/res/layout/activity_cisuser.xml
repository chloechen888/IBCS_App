<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.CISUserActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="-75dp"
        android:layout_marginBottom="-33dp"
        app:srcCompat="@drawable/foodbackground3" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="75dp"
        android:fontFamily="cursive"
        android:text="Create User"
        android:textColor="#CDC9C9"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:backgroundTint="#C5C1C1"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name"
        android:textColor="#C5C1C1"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="273dp"
        android:ems="10"
        android:backgroundTint="#C5C1C1"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="UserID"
        android:textColor="#C5C1C1"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/yearInput"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="362dp"
        android:ems="10"
        android:backgroundTint="#C5C1C1"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Year Level"
        android:textColor="#C5C1C1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/placeOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="248dp"
        android:onClick="createUser"
        android:text="Create User" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="119dp"
        android:onClick="goToAdminMenu"
        android:text="â¬… Back To Menu" />

</RelativeLayout>