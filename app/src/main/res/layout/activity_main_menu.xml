<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.CISUserActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="-21dp"
        android:layout_marginBottom="-75dp"
        app:srcCompat="@drawable/menubackground" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="115dp"
        android:fontFamily="cursive"
        android:text="Menu"
        android:textColor="#959FA3"
        android:textSize="70sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/placeOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="44dp"
        android:onClick="goToMainPage"
        android:text="⬅ Back to main menu" />

    <Button
        android:id="@+id/button4"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#00BCD4"
        android:onClick="goPlaceOrder"
        android:shadowRadius="0"
        android:text="PLACE ORDER🛎️" />

    <Button
        android:id="@+id/MenuM"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#00BCD4"
        android:onClick="wholeMenu"
        android:shadowRadius="0"
        android:text="MENU📖" />

    <Button
        android:id="@+id/button6"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#00BCD4"
        android:onClick="cart"
        android:shadowRadius="0"
        android:text="CART🛒" />

    <Button
        android:id="@+id/deleteMenuM"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="421dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#00BCD4"
        android:onClick="goDeleteOrder"
        android:shadowRadius="0"
        android:text="DELETE ORDER❌" />

    <Button
        android:id="@+id/dessert"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="494dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#00BCD4"
        android:onClick="goToDessertMenu"
        android:text="✨NEW! dessert Menu 🍰✨" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="79dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="39dp"
        android:onClick="goToAccount"
        app:srcCompat="@drawable/accounticon" />

</RelativeLayout>